<resources>

    <style name="Theme.Welcome" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <!--改变系统TabLayout字体-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!--登录页面-->
    <style name="User">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
        <item name="android:paddingLeft">@dimen/margin_l</item>
        <item name="android:paddingRight">@dimen/margin_l</item>
        <item name="android:background">@drawable/selector_bg_edit</item>
    </style>

    <!--登录页面手机号-->
    <style name="Phone" parent="User">
        <item name="com.yl.yhbmfw:icon">@drawable/selector_icon_phone</item>
        <item name="com.yl.yhbmfw:text_hint">手机号</item>
        <item name="com.yl.yhbmfw:input_type">number</item>
        <item name="com.yl.yhbmfw:max_length">11</item>
    </style>

    <!--登录页面密码-->
    <style name="Password" parent="User">
        <item name="com.yl.yhbmfw:icon">@drawable/selector_icon_pwd</item>
        <item name="com.yl.yhbmfw:input_type">password</item>
    </style>

    <!-- 登录页面按钮-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
        <item name="android:layout_marginBottom">@dimen/margin_xl</item>
        <item name="android:background">@drawable/selector_bg_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>


</resources>
