<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.activity.AddReceiveAddressActivity">

    <com.yl.library.widget.EditTextGroup
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_left="收件人"/>

    <include layout="@layout/line_gray_1dp"/>

    <com.yl.library.widget.EditTextGroup
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_left="联系电话"/>

    <include layout="@layout/line_gray_1dp"/>

    <com.yl.library.widget.TextViewGroup
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_left="所在地区"
        app:text_right_gravity="left"/>

    <include layout="@layout/line_gray_1dp"/>

    <com.yl.library.widget.TextViewGroup
        android:id="@+id/tv_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_left="街道"
        app:text_right_gravity="left"/>

    <include layout="@layout/line_gray_1dp"/>

    <EditText
        android:id="@+id/et_details_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:background="@null"
        android:gravity="left"
        android:hint="请填写详细地址"
        android:minLines="3"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_m"/>


    <include layout="@layout/line_gray_8dp"/>

    <com.yl.library.widget.TextViewGroup
        android:id="@+id/tv_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:arrow_show="false"
        app:btn_show="true"
        app:btn_switch="false"
        app:text_left="设为默认"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE"/>

</LinearLayout>
