<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/theme_color">

    <ImageView
        android:id="@+id/base_iv_left"
        style="@style/AppTitleIcon"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/base_tv_left"
        style="@style/AppTitleMenu"/>

    <TextView
        android:id="@+id/base_tv_title"
        style="@style/AppTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        tools:text="TITLE"/>

    <ImageView
        android:id="@+id/base_iv_right"
        style="@style/AppTitleIcon"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/base_tv_right"
        style="@style/AppTitleMenu"
        android:layout_alignParentRight="true"/>

</RelativeLayout>